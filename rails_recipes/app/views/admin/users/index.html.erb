<div style="margin-top: 4rem;"></div> <!--把下面的內容往下擠,讓內容不被遮蓋-->
<h1>admin_users</h1>

<table class="table">
  <tr>
    <th>id</th>
    <th>email</th>
    <th>Groups</th>
    <th>actions</th>
  </tr>
  <% @users.each do |user| %>
  <tr>
    <td><%= user.id %></td>
    <td><%= user.email%></td>
    <td>
      <% user.groups.each do |g| %>
        <%= g.name%><br>
      <% end %>
    </td>
    <td><%= link_to t("edit"), edit_admin_user_path(user), :class => "btn btn-default" %></td>
    <td><%= link_to t("edit_profile"), edit_admin_user_profile_path(user), :class => "btn btn-primary" %></td>
  </tr>
  <% end %>
</table>

